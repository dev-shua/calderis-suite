<section class="cs-currency-feature">
  <div class="form-group">
    <label>{{labels.playerEdit}}</label>
    <div class="form-fields">
      <input type="checkbox" name="playerEdit" {{#if values.playerEdit}}checked{{/if}}>
    </div>
    <p class="notes">{{labels.playerEditHint}}</p>
  </div>

  <div class="form-group">
    <label>{{labels.sync}}</label>
    <div class="form-fields">
      <select name="sync">
        <option value="none" {{#if (eq values.sync "none")}}selected{{/if}}>{{labels.sync_none}}</option>
        <option value="referenceToGP" {{#if (eq values.sync "referenceToGP")}}selected{{/if}}>{{labels.sync_ref}}</option>
      </select>
    </div>
    <p class="notes">{{labels.syncHint}}</p>
  </div>

  <hr>

  <div class="form-group">
    <label>{{labels.openDefs}}</label>
    <div class="form-fields">
      <button type="button" data-action="open-defs">{{labels.openDefs}}</button>
    </div>
  </div>

  <footer class="sheet-footer flexrow">
    <button type="submit" class="default">{{labels.save}}</button>
  </footer>
</section>
