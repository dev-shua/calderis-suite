{
  "compilerOptions": {
    "types": ["fvtt-types"],
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
